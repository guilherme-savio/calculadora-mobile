<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">
    
    <TextView
        android:id="@+id/conta"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textColor="@color/white"
        android:gravity="end"
        android:textSize="70sp"
        android:layout_marginEnd="15dp">

    </TextView>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textColor="@color/white"
        android:gravity="end"
        android:textSize="50sp"
        android:layout_marginEnd="15dp">

    </TextView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/black"
        android:columnCount="4"
        android:orientation="vertical"
        android:rowCount="5">
        <Button
            android:id="@+id/clear"
            android:text="C"
            android:layout_margin="5dp"
            style="@style/SoftGray_Button">
        </Button>

        <Button
            android:id="@+id/sete"
            android:text="7"
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>

        <Button
            android:id="@+id/quatro"
            android:text="4"
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>

        <Button
            android:id="@+id/um"
            android:text="1"
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>

        <Button
            android:id="@+id/zero"
            android:text="0"
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>

        <Button
            android:id="@+id/pos_neg"
            android:text="+/-"
            android:layout_margin="5dp"
            style="@style/SoftGray_Button">
        </Button>
        <Button
            android:id="@+id/oito"
            android:text="8"
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>
        <Button
            android:id="@+id/cinco"
            android:text="5"
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>
        <Button
            android:id="@+id/dois"
            android:text="2"
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>
        <Button
            android:id="@+id/merge_zero"
            android:text=""
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>

        <Button
            android:id="@+id/porcentagem"
            android:text="%"
            android:layout_margin="5dp"
            style="@style/SoftGray_Button">
        </Button>
        <Button
            android:id="@+id/nove"
            android:text="9"
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>
        <Button
            android:id="@+id/seis"
            android:text="6"
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>
        <Button
            android:id="@+id/tres"
            android:text="3"
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>
        <Button
            android:id="@+id/ponto"
            android:text="."
            android:layout_margin="5dp"
            style="@style/MediumGray_Button">
        </Button>

        <Button
            android:id="@+id/div"
            android:text="รท"
            android:layout_margin="5dp"
            style="@style/Orange_Button">
        </Button>
        <Button
            android:id="@+id/mult"
            android:text="X"
            android:layout_margin="5dp"
            style="@style/Orange_Button">
        </Button>
        <Button
            android:id="@+id/sub"
            android:text="-"
            android:layout_margin="5dp"
            style="@style/Orange_Button">
        </Button>
        <Button
            android:id="@+id/soma"
            android:text="+"
            android:layout_margin="5dp"
            style="@style/Orange_Button">
        </Button>
        <Button
            android:id="@+id/igual"
            android:text="="
            android:layout_margin="5dp"
            style="@style/Orange_Button">
        </Button>
    </GridLayout>


</LinearLayout>