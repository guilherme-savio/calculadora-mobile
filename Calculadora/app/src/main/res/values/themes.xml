    <style name="Theme.Calculadora" parent="Base.Theme.Calculadora" />
    
    <style name="Orange_Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textSize">35sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/ic_orange</item>
    </style>

    <style name="MediumGray_Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textSize">25sp</item>
